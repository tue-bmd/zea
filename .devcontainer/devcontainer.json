// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "usbmd keras3",
	"image": "usbmd/keras3:v2.1.1",
	"runArgs": [
		"--gpus", "all",
		"-m",
		"100g",
		"--cpus",
		"7"
	],
	// Link the workspace folder to the container
	"workspaceMount": "source=${localWorkspaceFolder},target=/ultrasound-toolbox,type=bind",
	"workspaceFolder": "/ultrasound-toolbox",
	"shutdownAction": "stopContainer",
	"containerUser": "devcontainer0", // change this to your username in the container
	// Mount the NAS drive
	"mounts": [
		{
			"source": "/mnt/z", // change this to the path of your NAS drive
			"target": "/mnt/z",
			"type": "bind"
		},
	],
	// Install vscode extensions
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.black-formatter",
				"ms-python.isort",
				"sleistner.vscode-fileutils",
				"gihub.copilot",
				"adpyke.codesnap",
				"eamodio.gitlens",
				"h5web.vscode-h5web",
				"ms-toolsai.jupyter"
			]
		}
	}
}
