// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "zea",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		"dockerfile": "../Dockerfile"
	},
	// Ensure the .env file exists
	"initializeCommand": "touch ${localWorkspaceFolder}/.env",
	"runArgs": [
		"--gpus", "all",
		"-m",
		"100g",
		"--cpus",
		"7",
		"--env-file", "${localWorkspaceFolder}/.env"
	],
	// Link the workspace folder to the container
	"workspaceMount": "source=${localWorkspaceFolder},target=/ultrasound-toolbox,type=bind",
	"workspaceFolder": "/ultrasound-toolbox",
	"shutdownAction": "stopContainer",
	"containerUser": "devcontainer0", // change this to your username in the container
	// Mount the NAS drive
	"mounts": [
		{
			"source": "bmd-ai",
			"target": "/mnt/z",
			"type": "volume"
		}
	],
	// Install vscode extensions
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff",
				"tamasfe.even-better-toml",
				"sleistner.vscode-fileutils",
				"github.copilot",
				"adpyke.codesnap",
				"eamodio.gitlens",
				"h5web.vscode-h5web",
				"ms-toolsai.jupyter"
			]
		}
	}
}
